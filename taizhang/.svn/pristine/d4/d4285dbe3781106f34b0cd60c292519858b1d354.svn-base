<script type="text/javascript">
    $(function () {
        $("#dg_roles").datagrid({
            url: "../ashx_ui/ui_getRole.ashx?action=getall",
            idField: 'id',
            fit: true,
            collapsible: true,
            fitColumns: true,
            singleSelect: true,
            rownumbers: true,
            onClickRow: function (index, row) {
                var txt = row.id;
                loadTree();

            },
            pagination: false,
            title: "角色列表",
            columns: [[
                { field: 'ck', checkbox: true },
                { field: 'id', title: 'id', hidden: true },
                { field: 'rolename', title: '角色列表', width: 30 },
                

            ]]
        });

    });

    function loadGrid(node) {
        $("#dg_menus").treegrid({
            url: "../ashx_ui/ui_getRole.ashx?action=all&txt=" + encodeURI(node),
            idField: 'id',
            treeField: 'menuname',
            fitColumns: true,
            rownumbers: true,
            singleSelect: false,
            fit: true,
            collapsible: true,
            //striped: true,
            columns: [[
                { field: 'ck', checkbox: true },
                { field: 'menuname', title: '菜单名称', width: 70 },
                { field: '_parentId', title: '父节点', width: 80, hidden: true }
            ]]
        });
    }
    function loadTree() {
        $("#dg_menus").tree({
            url: "../ashx_ui/ui_menuTree.ashx?action=all",
            //striped: true,
            columns: [[
                { field: 'ck', checkbox: true },
                { field: 'menuname', title: '菜单名称', width: 70 },
            ]]
        });




    }

</script>
<div class="easyui-layout" data-options="fit : true,border : false">
    <div data-options="region:'west', border:false" style="width: 260px;">
        <table id="dg_roles">
        </table>
    </div>
    <div data-options="region:'center',border:false">
        <table id="dg_menus">

        </table>
    </div>
</div>
